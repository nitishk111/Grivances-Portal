<configuration>
    <appender name="console-ap" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yy-MM-dd HH::mm::SSS} [%thread] %-5level %logger{36} =%msg%n
            </pattern>
        </encoder>
    </appender>
    <appender name="file-ap" class="ch.qos.logback.core.FileAppender">
        <file>
            JournalApp.log
        </file>
        <append>true</append>
        <encoder>
            <pattern>
                %d{yy-MM-dd HH::mm::SSS} [%thread] %-5level %logger{36} =%msg  %n
            </pattern>
        </encoder>
    </appender>

    <logger name="io/github/nitishc/grievance.user_service" level="INFO" additivity="true">
        <appender-ref ref="file-ap" />
    </logger>

    <root>
        <appender-ref ref="console-ap"/>
    </root>

</configuration>